generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Priority {
  low
  medium
  high
}

model User {
  id String @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  email String @unique
  name String?
  password String

  workInterval Int? @default(50) @map("work_interval")
  breakInterval Int? @default(10) @map("break_interval")
  intervalsCount Int? @default(7) @map("intervals_count")

  tasks Task[]
  timeBlocks TimeBlock[]
  pomodorroSessions PomodorroSession[]

  @@map("user")
}

model Task {
  id String @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  name String?
  isCompelted Boolean? @default(false) @map("is_completed")
  priority Priority?

  user User @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  @@map("task")
}

model TimeBlock {
  id String @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  name String
  color String?
  duration Int
  order Int @default(1)

  user User @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  @@map("time_block")
}

model PomodorroSession {
  id String @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  isCompleted Boolean @default(false) @map("is_completed")

  user User @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  rounds PomodorroRound[]

  @@map("pomodorro_session")
}

model PomodorroRound {
  id String @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  totalSeconds Int @map("total_seconds")
  isCompleted Boolean @default(false) @map("is_completed")

  pomodorroSession PomodorroSession @relation(fields: [pomodorroSessionId], references: [id], onDelete: Cascade)
  pomodorroSessionId String @map("pomodorro_session_id")

  @@map("pomodorro_round")
}